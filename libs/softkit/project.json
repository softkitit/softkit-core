{
  "name": "softkit",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/softkit/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx build softkit:build-internal",
          "chmod +x dist/libs/softkit/src/lib/cli.js"
        ],
        "parallel": false,
        "outputPath": "dist/libs/softkit",
        "tsConfig": "libs/softkit/tsconfig.lib.json",
        "packageJson": "libs/softkit/package.json",
        "main": "libs/softkit/src/index.ts",
        "assets": [
          "libs/softkit/*.md"
        ]
      },
      "outputs": [
        "{options.outputPath}"
      ],
      "dependsOn": [
        { "projects": "self", "target": "build" }
      ]
    },
    "build-internal": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/softkit",
        "tsConfig": "libs/softkit/tsconfig.lib.json",
        "packageJson": "libs/softkit/package.json",
        "main": "libs/softkit/src/index.ts",
        "assets": [
          "libs/softkit/*.md"
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/softkit/**/*.ts",
          "libs/softkit/package.json",
          "libs/softkit/project.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/softkit/jest.config.ts"
      }
    }
  },
  "tags": []
}
