{
  "$schema": "http://json-schema.org/schema",
  "$id": "SaasBuildKitLibraryGenerator",
  "title": "Create a NestJS Library for SaaS buildkit",
  "description": "Create a NestJS Library for SaaS buildkit.",
  "cli": "nx",
  "type": "object",
  "examples": [
    {
      "command": "nx g @softkit/lib mylib --directory=myapp",
      "description": "Generate libs/myapp/mylib"
    }
  ],
  "properties": {
    "name": {
      "description": "Library name.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the library?"
    },
    "directory": {
      "description": "A directory where the library is placed.",
      "type": "string",
      "alias": "dir"
    },
    "lintCommandName": {
      "type": "string",
      "default": "lint",
      "description": "The name of lint nx command in project.json"
    },
    "linter": {
      "description": "The tool to use for running lint checks.",
      "type": "string",
      "enum": [
        "eslint",
        "none"
      ],
      "default": "eslint"
    },
    "unitTestRunner": {
      "description": "Test runner to use for unit tests.",
      "type": "string",
      "enum": [
        "jest",
        "none"
      ],
      "default": "jest"
    },
    "tags": {
      "description": "Add tags to the library (used for linting).",
      "type": "string",
      "alias": "t"
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false,
      "x-priority": "internal"
    },
    "skipTsConfig": {
      "description": "Do not update tsconfig.base.json for development experience.",
      "type": "boolean",
      "default": false,
      "x-priority": "internal"
    },
    "publishable": {
      "description": "Create a publishable library.",
      "type": "boolean",
      "x-priority": "important"
    },
    "buildable": {
      "description": "Generate a buildable library.",
      "type": "boolean",
      "default": true,
      "x-priority": "important"
    },
    "importPath": {
      "description": "The library name used to import it, like @myorg/my-awesome-lib. Must be a valid npm name.",
      "type": "string"
    },
    "global": {
      "description": "Add the Global decorator to the generated module.",
      "type": "boolean",
      "default": false
    },
    "service": {
      "description": "Include a service with the library.",
      "type": "boolean",
      "default": false
    },
    "controller": {
      "description": "Include a controller with the library.",
      "type": "boolean",
      "default": false
    },
    "testEnvironment": {
      "description": "The test environment for jest, for node applications this should stay as node unless doing DOM testing.",
      "type": "string",
      "enum": [
        "jsdom",
        "node"
      ],
      "default": "node"
    },
    "target": {
      "description": "The ES target, Nest suggest using es2021 or higher.",
      "type": "string",
      "default": "es2021",
      "enum": [
        "es5",
        "es6",
        "esnext",
        "es2015",
        "es2016",
        "es2017",
        "es2018",
        "es2019",
        "es2020",
        "es2021"
      ]
    },
    "strict": {
      "description": "Whether to enable tsconfig strict mode or not.",
      "type": "boolean",
      "default": true
    },
    "standaloneConfig": {
      "description": "Split the project configuration into <projectRoot>/project.json rather than including it inside workspace.json",
      "type": "boolean",
      "default": true,
      "x-deprecated": "Nx only supports standaloneConfig"
    },
    "setParserOptionsProject": {
      "type": "boolean",
      "description": "Whether or not to configure the ESLint \"parserOptions.project\" option. We do not do this by default for lint performance reasons.",
      "default": false
    },
    "skipPackageJson": {
      "description": "Do not add dependencies to `package.json`.",
      "type": "boolean",
      "default": false,
      "x-priority": "internal"
    },
    "simpleName": {
      "description": "Don't include the directory in the name of the module of the library.",
      "type": "boolean",
      "default": false
    },
    "i18n": {
      "description": "Add support for i18n.",
      "type": "boolean",
      "default": false
    },
    "config": {
      "description": "Add config file for library.",
      "type": "boolean",
      "default": false
    },
    "configureJestConfig": {
      "description": "Generates a tailored Jest configuration file for the library when set to true.",
      "type": "boolean",
      "default": true
    },
    "languages": {
      "description": "Set languages for i18n.",
      "type": "array",
      "alias": "l",
      "default": [
        "en"
      ],
